<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_profile_gradient"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header / Profile block -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="18dp"
            android:paddingBottom="8dp">

            <FrameLayout
                android:layout_width="96dp"
                android:layout_height="96dp">

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher_round"
                    android:contentDescription="Profil resmi"
                    android:background="@drawable/profile_avatar_bg" />

            </FrameLayout>

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="kullaniciladi"
                android:textSize="18sp"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="emre.yilmaz@example.com"
                android:textSize="13sp"
                android:textColor="#666666" />

            <!-- Stats removed per request -->

        </LinearLayout>

        <!-- Settings list -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <!-- Avatar selection row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avatar"
                    android:textColor="#444444"
                    android:layout_marginRight="12dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/btnAvatarFemale"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/profile_avatar_choice_bg"
                    android:src="@drawable/ic_avatar_female"
                    android:contentDescription="female avatar"
                    android:padding="8dp"
                    android:layout_marginRight="12dp" />

                <ImageButton
                    android:id="@+id/btnAvatarMale"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/profile_avatar_choice_bg"
                    android:src="@drawable/ic_avatar_male"
                    android:contentDescription="male avatar"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Tema -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/itemTheme"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:cardCornerRadius="16dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp">

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="#D6B8E6"
                        android:layout_marginRight="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tema Seçimi"
                        android:textSize="15sp"
                        android:textColor="#444444" />

                    

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="→"
                        android:textColor="#B3B3B3" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Bildirimler -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/itemNotifications"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:cardCornerRadius="16dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp">

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="#F5C4D0"
                        android:layout_marginRight="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bildirimler"
                        android:textSize="15sp"
                        android:textColor="#444444" />
                    <Switch
                        android:id="@+id/switchNotifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <!-- Help -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/itemHelp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:cardCornerRadius="16dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp">

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="#CDEFF0"
                        android:layout_marginRight="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Yardım"
                        android:textSize="15sp"
                        android:textColor="#444444" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="→"
                        android:textColor="#B3B3B3" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Shared footer is provided by the activity; fragment-level include removed to avoid duplication -->

    </LinearLayout>

</FrameLayout>
