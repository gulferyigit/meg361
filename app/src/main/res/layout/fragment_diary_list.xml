<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pink_white_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <!-- Centered purple page title -->
        <TextView
            android:id="@+id/tvPageMainTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Günlüklerim"
            android:textColor="#6B21A8"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginBottom="6dp" />

        <!-- Card header with title and + -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:clipToPadding="false"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp">

                <TextView
                    android:id="@+id/cardTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Add button removed -->
            </LinearLayout>

            <!-- Search + filter row inside card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:elevation="1dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@android:color/transparent"
                        android:paddingStart="12dp"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="8dp">
                        <!-- Search hint removed as requested -->
                    </LinearLayout>

                    <!-- Filter button removed -->
            </LinearLayout>
        </LinearLayout>

        <!-- RecyclerView for journal cards -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvJournalList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="12dp"
            android:paddingTop="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" />

        <!-- Bottom navigation removed from fragment; shared bottom_nav is included in activity layout -->

    </LinearLayout>

</FrameLayout>
